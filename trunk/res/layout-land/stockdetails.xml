		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 6 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line7"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle07"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_open"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_Open"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 7 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line8"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle08"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_day_hl"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_DayLow"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_DaySperater"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/detail_sperater"
		android:paddingLeft="5dip"
		android:paddingRight="5dip"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_DayHigh"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 8 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line9"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle09"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_52w_hl"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_52WLow"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_52WSperater"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/detail_sperater"
		android:paddingLeft="5dip"
		android:paddingRight="5dip"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_52WHigh"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 9 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line10"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle10"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_50d_avg"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_50DMovingAvg"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 10 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line11"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle11"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_200d_avg"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_200DMovingAvg"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 11 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line12"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle12"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_pe_ratio"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_PE"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	</LinearLayout>
	<!--  Right -->
	<LinearLayout  
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
	<!-- Line 1 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle02"
		android:layout_height="wrap_content"
		android:layout_width="100dip"
		android:text="@string/detail_lasttrade_datetime"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_LastTradeDate"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_LastTradeTime"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:paddingLeft="5dip"
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 2 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line12"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_ChartOption"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/detail_chart_type"
		android:layout_marginRight="5dip"
		>
		</TextView>
		<Spinner 
		android:id="@+id/Spinner_ChartTime" 
		android:layout_width="wrap_content" 
		android:layout_height="40dip"
		>
		</Spinner>
		</LinearLayout>
		<ImageView 
		android:id="@+id/ImageView_Chart" 
		android:layout_width="260dip" 
		android:layout_height="160dip"
		android:layout_gravity="left"
		>
		</ImageView>
	</LinearLayout>
</TableRow>
</TableLayout>

<Button
android:text="@string/detail_buysell"
android:layout_width="fill_parent"
android:id="@+id/Button_BuySell"
android:layout_height="wrap_content"
android:layout_marginTop="2dip"
android:layout_marginRight="5dip"
>
</Button>
</LinearLayout>
</ScrollView>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android" 
android:id="@+id/ScrollView01" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
>
<LinearLayout  
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
>

<TableLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
<TableRow>
	<!--  Left -->
	<LinearLayout  
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
	<!-- Line 1 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_SymbolName"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="@string/detail_unknown_symbol"
		android:background="@color/detail_symbol_bg_color"
		android:textColor="@color/detail_symbol_text_color"
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 2 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line3"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle03"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_lasttrade_price"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_LastTradePrice"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 3 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line4"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle04"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_change"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_Change"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_ChangePercent"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:paddingLeft="5dip"
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 4 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line5"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle05"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
		android:text="@string/detail_volume"
		>
		</TextView>
		<TextView
		android:id="@+id/TextView_Volume"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text=""
		android:layout_marginRight="5dip"
		>
		</TextView>
		</LinearLayout>
	<!-- Line 5 -->
		<LinearLayout
		android:id="@+id/LinearLayout_Line6"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
		android:id="@+id/TextView_detailtitle06"
		android:layout_height="wrap_content"
		android:layout_width="170dip"
